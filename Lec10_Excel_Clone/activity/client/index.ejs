<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" integrity="sha512-HK5fgLBL+xu6dm/Ii3z4xhlSUyZgTT9tuc/hSrtw6uzJOvgRr2a9jyxxT1ely+B+xFAmJKVSTbpM/CuL7qxO8w==" crossorigin="anonymous" />
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="menu">
        <div class="file active-menu">File</div>
        <div class="home">Home</div>
    </div>
    <div class="menu-options">
        <div class="file-menu-options">
            <div class="new">New</div>
            <div class="open">Open</div>
            <div class="save">Save</div>
        </div>
        <div class="home-menu-options hide">Home Menu Options</div>
    </div>
    <div class="formula-tab">
        <input type="text" id="address" disabled>
        <input type="text" id="formula">
    </div>

    <div class="content">
        <div class="top-left-cell"></div>

        <div class="top-row">
            <%for(let j=0 ; j<26 ; j++){%>
                <!-- 0 => A -->
                <div class="top-row-cell"><%= String.fromCharCode(65+j) %></div>
              <%}%>
        </div>

        <div class="left-col">
            <%for(let j=0 ; j<100 ; j++){%>
                <div class="left-col-cell"> <%= j+1 %> </div>
              <%}%>
        </div>


        <div class="cells">
          <% for(let i=0 ; i<100 ; i++){%>
              <div class="row">
                  <%for(let j=0 ; j<26 ; j++){%>
                      <div class="cell" contentEditable="true" rid=<%=i%> cid=<%= j%>></div>
                    <%}%>
              </div>
            <% } %>
        </div>
    </div>
    
    <div class="sheets">
        <div class="sheets-list">
            <div class="sheet active-sheet" sid="0">Sheet 1</div>
        </div>
        <div class="add-sheet">
            <i class="fas fa-plus-circle"></i>
        </div>
    </div>
    <script src="./db.js"></script>
    <script src="./script.js"></script>
    <script src="./util.js"></script>
    <script src="./sheets.js"></script>
    <script src="./menu.js"></script>
</body>
</html>